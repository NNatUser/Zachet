<Page x:Class="Зачетное_задание.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Зачетное_задание.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="450"
      Title="PageLogin">

    <Grid>
        <StackPanel Margin="40,60,40,40" Grid.Row="1">
            <TextBlock Text="Логин:" Margin="5 5 5 0" Style="{StaticResource Text}"/>
            <TextBox x:Name="TBLogin" Margin="5 5 5 5"/>
            <TextBlock Text="Пароль:" Margin="5 5 5 0" Style="{StaticResource Text}"/>
            <PasswordBox x:Name="PBPassword" Margin="5 5 5 5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Click="BTNLogin_Click" x:Name="BTNLogin" Width="150" Height="40" 
                        Margin="5 5 5 5" Style="{StaticResource BTN}">Вход</Button>
                <Button Click="btnRegin_Click" x:Name="BTNPassword" Width="150" Height="40" 
                        Margin="5 5 5 5" Style="{StaticResource BTN}">Регистрация</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
