<Window x:Class="Зачетное_задание.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Зачетное_задание"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="350*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10,0,0,376"
                    HorizontalAlignment="Left" Grid.ColumnSpan="2" Width="430" Grid.RowSpan="2">
            <Image Source="/logo_black.png"
               Height="90" Width="180"/>
            <TextBlock Text="Академия" Style="{StaticResource Title}"/>
        </StackPanel>
        <Frame Name="FrmMain" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
